
#include <stdio.h>
#include <stdlib.h>

int main (){

    int n, i, num;
    int pares=0, impares=0;

     printf ("Quantos números você quer ler: ");
     scanf ("%d", &n);

     for (i=1; i<=n; i++){
        printf ("Insira o numero:\n");
        scanf ("%d", &num);

      if (num % 2 == 0){
        pares = pares + 1;
      }
      else if (num % 2 != 0){
        impares = impares + 1;
      }
     }
     printf ("pares: %d\n impares: %d\n", pares, impares);


  return 0;
}
