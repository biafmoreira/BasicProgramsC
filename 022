
#include <stdio.h>
#include <stdlib.h>

// calculadora simples

int main (){

    float num1, num2;
    char operador;

    printf ("insira o primeiro numero:\n");
    scanf ("%f", &num1);

    printf ("insira o segundo numero:\n");
    scanf ("%f", &num2);

    printf ("insira a operacao desejada (+,-,*,/):\n");
    scanf (" %c", &operador);

    if (operador == '+')
     printf ("resultado: %.2f", num1 + num2);

    else if (operador == '-')
     printf ("resultado: %.2f", num1 - num2);

    else if (operador == '*')
     printf ("resultado: %.2f", num1 * num2);

    else if (operador == '/'){
        if (num2 != 0)
     printf ("resultado: %.2f", num1 / num2);
          else
       printf ("divisao por 0 nao eh permetida.");
       } else
        printf ("opredaor invalido.");

return 0;
}
