#include <stdio.h>
#include <stdlib.h>

int main (){
   int num1, num2, num3, num4, num5, num6, qnt_par=0, qnt_impar=0;

   printf ("insira seis numeros: ");
   scanf ("%d %d %d %d %d %d", &num1,  &num2, &num3, &num4, &num5, &num6);

   if (num1 % 2 == 0)
    qnt_par++;
   else
    qnt_impar++;

   if (num2 % 2 == 0)
    qnt_par++;
   else
    qnt_impar++;

   if (num3 % 2 == 0)
    qnt_par++;
   else
    qnt_impar++;

   if (num4 % 2 == 0)
    qnt_par++;
   else
    qnt_impar++;

   if (num5 % 2 == 0)
    qnt_par++;
   else
    qnt_impar++;

   if (num6 % 2 == 0)
    qnt_par++;
   else
    qnt_impar++;

   printf ("quantidade de pares: %d \n quantidade de impares:%d\n", qnt_par, qnt_impar);

    return 0;
}
