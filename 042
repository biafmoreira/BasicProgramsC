#include <stdio.h>
#include <stdlib.h>

int main (){
  int i, N, num;
  int positivo=0, negativo=0, zero=0;

     printf ("Insira a qnt de numeros que quer inserir:\n");
     scanf ("%d", &N);

     for (i=1; i<=N; i++){
        printf ("Insira um numero:\n ");
        scanf ("%d", &num);

     if (num > 0){
        positivo = positivo + 1;
     }
     else if (num < 0){
        negativo = negativo + 1;
     }
     else{
       zero = zero + 1;
     }
}
   printf ("positivos:%d\n negativos: %d \n Zeros: %d\n", positivo, negativo, zero);
  return 0;
}
