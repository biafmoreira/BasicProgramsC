#include <stdio.h>
#include <stdlib.h>

int main (){
  int n1, n2, n3, n4, n5, n6, n7, n8, n9, n10, m_3=0, m_5=0;

  printf ("Insira dez números: ");
  scanf ("%d %d %d %d %d %d %d %d %d %d", &n1, &n2, &n3, &n4, &n5, &n6, &n7, &n8,&n9, &n10);

  if (n1 % 3 == 0)
    m_3++;
  if (n1 % 5 ==0)
      m_5++;

  if (n2 % 3 == 0)
    m_3++;
  if (n2 % 5 ==0)
      m_5++;

  if (n3 % 3 == 0)
    m_3++;
  if (n3 % 5 ==0)
      m_5++;

 if (n4 % 3 == 0)
    m_3++;
 if (n4 % 5 ==0)
      m_5++;

 if (n5 % 3 == 0)
    m_3++;
 if (n5 % 5 ==0)
      m_5++;

 if (n6 % 3 == 0)
    m_3++;
 if (n6 % 5 ==0)
      m_5++;

 if (n7 % 3 == 0)
    m_3++;
 if (n7 % 5 ==0)
      m_5++;

 if (n8 % 3 == 0)
    m_3++;
 if (n8 % 5 ==0)
      m_5++;

 if (n9 % 3 == 0)
    m_3++;
 if (n9 % 5 ==0)
      m_5++;

 if (n10 % 3 == 0)
    m_3++;
 if (n10 % 5 ==0)
      m_5++;
      
/*Por que usar 'if' ao invés de 'else if': usar else if impede que ambas as condições sejam verificadas, resultando em uma contagem incorreta. 
Com if, todas as condições são testadas independentemente, permitindo que um número que é múltiplo de 3 e 5 incremente ambos os contadores corretamente.*/


printf ("Qnt de multiplos de 3: %d \n Qnt de multiplos de 5: %d \n", m_3, m_5);

return 0;
}
